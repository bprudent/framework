<?xml version="1.0" encoding="UTF-8"?>
<template xmlns:c = "class://CoreTag">
    <c:forEach list = "${this.provider.getActions()}" var = "desc">
        <c:set var = "provider" value = "${desc[0]}" />
        <c:set var = "action" value = "${desc[1]}" />
        
        <div class = "action-description">
            <c:if test = "${action.icon}">
                <div><img src = "${=config.absUri}/admin/view/icons/${=action.icon}" alt = "${=action.label}" /></div>
            </c:if>
            
            <a href = "${=action.getURI(${provider.getClass()})}">${=action.label}</a>
        </div>        
    </c:forEach>
</template>