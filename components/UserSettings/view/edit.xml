<?xml version="1.0" encoding="UTF-8"?>
<template xmlns:c = "class://CoreTag" xmlns:f = "class://FrameworkTag">
	<div class = "usersettings">
		<h3><c:out value = "Account Information" i18n = "i18n" /></h3>

		<f:form type = "validate">
			<table class = "usersettings-table">
			<c:forEach list = "${this.definition}" var = "def">
				<c:set var = "property,label" value = "@{each(${def})}" />
				<tr>
 		  		<th><label id = "${=property}">${=label}</label></th>
					<td><input type = "text" name = "${=property}" id = "${=property}" 
						value = "${=current.user.$property}" /></td>
				</tr>
			</c:forEach>
			</table>

			<div><button type = "submit"><c:out value = "Update" i18n = "i18n" /></button></div>
		</f:form>
	</div>
</template>
