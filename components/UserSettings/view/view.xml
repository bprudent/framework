<?xml version="1.0" encoding="UTF-8"?>
<template xmlns:c = "class://CoreTag" xmlns:f = "class://FrameworkTag">
	<div class = "usersettings">
		<h3><c:out value = "Account Information" i18n = "i18n" /></h3>
	
		<f:href component = "UserSettings" action = "UserSettings::ACTION_EDIT" var = "action" />
		<form action = "${=action}" method = "post">
		  <table class = "usersettings-table">
			<c:forEach list = "${this.definition}" var = "def">
				<c:set var = "property,label" value = "@{each(${def})}" />
				<tr>
 		  			<th>${=label}</th>
 		  			<td>${=current->user->${property}}</td>
 		  		</tr>
 		  	</c:forEach>
		  </table>
		  <div><button type = "submit">Edit</button></div>
		</form>
		  
		  <div><f:link component = "UserSettings" action = "UserSettings::ACTION_CHANGE_PASSWORD">Change Password</f:link></div>
	</div>
</template>
