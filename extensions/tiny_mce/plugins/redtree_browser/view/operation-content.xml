<?xml version="1.0" encoding="UTF-8"?>
<template xmlns:c = "class://CoreTag">    
    <c:if test = "${this.file}">
        <div class = "dms-file-description">
            <c:set var = "desc" value = "" />
            <c:if test = "${this.file.description}">
                <c:set var = "desc" value = "${this.file.description}" />
            </c:if>
            <c:else>
                <c:set var = "desc" value = "&lt;p&gt;No description&lt;/p&gt;" />
            </c:else>
            
            <div class = "dms-preview-pane">
                <c:if test = "${this.category} == 'image'">
                    <img id = "image-previewer" alt = "preview" />
                </c:if>
                
                ${=desc}
            </div>
        </div>
        
        <ul>
            <li><a href = "javascript:ui.fireEvent('fileSelected', ui.currentFile);"><img src = "${=config.absUri}/icons/accept.png" alt = "select file" /> Choose File</a></li>                
            <li><a href = "javascript:dms.onDownloadFile();"><img src = "${=config.absUri}/icons/download.png" alt = "download file" /> Download File</a></li>                
        </ul>
   </c:if>
   
    <ul>
        <li><a href = "javascript:dms.onAddFile()"><img src = "${=config.absUri}/icons/page_white_add.png" alt = "add file" /> Add File</a></li>                
        <li><a href = "javascript:dms.onDeleteFile()"><img src = "${=config.absUri}/icons/page_delete.png" alt = "delete file" /> Delete File</a></li>                            
    </ul>   
    
    <ul>
        <li><a href = "javascript:dms.onAddFolder();"><img src = "${=config.absUri}/icons/folder_add.png" alt = "add folder" /> Add Folder</a></li>
        <li><a href = "javascript:dms.onEditFolder();"><img src = "${=config.absUri}/icons/folder_edit.png" alt = "edit folder" /> Edit Folder</a></li>
        <li><a href = "javascript:dms.onDeleteFolder();"><img src = "${=config.absUri}/icons/folder_delete.png" alt = "delete folder" /> Delete Folder</a></li>
    </ul>
</template>
